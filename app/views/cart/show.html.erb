<h2>Cart</h2>

<% @items.each do |item,quantity| %>
  <h4>Item: <%= item.name %></h4>
  <p><%= image_tag item.image %></p>
  <p>Merchant: <%= item.merchant.name %></p>
  <p>Price: <%= item.price %></p>
  <p>Subtotal: <%= item.price * quantity %></p>
<% end %>

<p>Total: <%= cart.total %></p>

<% if @merchant %>
  <h1>All Items From <%= link_to @merchant.name, "/merchant/#{@merchant.id}" %></h1>
  <%= link_to 'New Item', "/merchants/#{@merchant.id}/items/new" %>
<% else %>
  <h1>All Items</h1>
<% end %>

<% if @items == nil %>
  <p>"There are no items in your cart!"</p>
<% else %>
  <%= button_to "Empty Cart", '/cart', method: :delete %>
<% end %>

<%= link_to "Checkout", new_order_path %>
