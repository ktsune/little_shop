<!DOCTYPE html>
<html>
  <head>
    <title>MonsterShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Merchants', '/merchants' %>
      <%= link_to 'Items', '/items' %>
      <%= link_to "Cart: #{cart.item_count}", '/cart' %>
    </nav>

    <% flash.each do |type, message| %>
      <%= message %>
    <% end %>

    <%= yield %>
  </body>
</html>
