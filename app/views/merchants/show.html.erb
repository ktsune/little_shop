<h1><%= @merchant.name %></h1>

<section class='address'>
  <p><%= @merchant.address %></p>
  <p><%= @merchant.city %> <%= @merchant.state %> <%= @merchant.zip %></p>
</section>

<p>Number of Items: <%= @merchant.count_of_items %> </p>
<p>Average Price Per Item: <%= number_to_currency(@merchant.average_price) %> </p>
<p>Distinct Cities: <%= @merchant.distinct_cities.join(", ") %> </p>

<%= button_to 'Edit', "/merchants/#{@merchant.id}/edit", method: :get %>
<% if !@merchant.active_orders? %>
  <%= button_to 'Delete', "/merchants/#{@merchant.id}", method: :delete %>
<% end %>
