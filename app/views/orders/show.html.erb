<h1>Order Details</h1>

<h5>Order number: <%= @order.id %></h5>
<h5>Order Date: <%= @order.created_at %></h5>
<h4>Name: <%= @order.username %></h4>

<h4>Shipping Address: <%= @order.shipping_address %></h4>

<% @items.each do |item, quantity| %>
  <h4>Item: <%= item.name %></h4>
  <h5>Merchant: <%= item.merchant.name %></h5>
  <h5>Cost: <%= item.price %></h5>
  <h5>Amount: <%= quantity %></h5>
  <h5>Subtotal: <%= item.price * quantity %></h5>
<% end %>

<h4>Total: <%= cart.total %></h4>
