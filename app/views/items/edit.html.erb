<h2>Edit Item</h2>
<%= form_tag "/items/#{@item.id}", method: :patch do %>
  <%= label_tag :name %>:<br>
  <%= text_field_tag :name %><br>

  <%= label_tag :description %>:<br>
  <%= text_field_tag :description %><br>

  <%= label_tag :price %>:<br>
  <%= text_field_tag :price %><br>

  <%= label_tag :image %>:<br>
  <%= text_field_tag :image %><br>

  <%= label_tag :inventory %>:<br>
  <%= text_field_tag :inventory %><br>

  <%= submit_tag 'Update Item' %>
<% end %>
